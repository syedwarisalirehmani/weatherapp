<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/five_dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDateClCityWeather"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="12-02-2021"
        android:layout_weight="1"
        android:gravity="start"
        android:textSize="@dimen/sub_date_temp_size"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgTempClCityWeather"
            android:layout_width="@dimen/sub_weather_image_size"
            android:layout_height="@dimen/sub_weather_image_size"
            android:src="@drawable/a0" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTempMinMaxClCityWeather"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="12"
        android:gravity="end"
        android:textSize="@dimen/sub_date_temp_size"
        android:textColor="@color/colorWhite" />

</LinearLayout>